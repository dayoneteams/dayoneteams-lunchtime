charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[{package,bower}.json]
indent_style = space
indent_size = 2

[{.eslintrc,.scss-lint.yml}]
indent_style = space
indent_size = 2

[*.{scss,sass,less}]
indent_style = space
indent_size = 2
